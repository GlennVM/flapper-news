<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>My Angular App!</title>
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular.min.js" type="text/javascript"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
	<script src="javascripts/AngularApp.js" type="text/javascript"></script>
	<style type="text/css">
		.glyphicon-thumbs-up { cursor: pointer; }
	</style>
</head>
<body ng-app="flapperNews">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<ui-view></ui-view>
			</div>
		</div>
	</div>

	<script type="text/ng-template" id="/home.html">
		<div class="page-header">
			<h1>Flapper News</h1>
		</div>

		<div ng-repeat="post in posts | orderBy: '-upvotes'">
			<p>
				<span style="font-size: 20px; margin-left: 10px">
					<a ng-show="post.link" href="{{post.link}}">{{post.title}}</a>
					<span ng-hide="post.link">{{post.title}}</span> - upvotes: {{post.upvotes}}
					<span class="glyphicon glyphicon-thumbs-up" ng-click="voteUp(post)"></span>
				</span>
				<span>
					<a href="#/posts/{{post._id}}">Comments</a>
				</span>
			</p>
		</div>

		<form ng-submit="addPost()" style="margin-top: 30px">
			<h3>Add a new post</h3>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Title" ng-model="title" />
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Link" ng-model="link" />
			</div>
			<button type="submit" class="btn btn-primary">Post</button>
		</form>
	</script>

	<script type="text/ng-template" id="/posts.html">
		<div class="page-header">
			<h3>
				<a ng-show="post.link" href="{{post.link}}">
					{{post.title}}
				</a>
				<span ng-hide="post.link">
					{{post.title}}
				</span>
			</h3>
			<div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
				<span class="glyphicon glyphicon-thumbs-up" ng-click="voteUp(comment)"></span>
				{{comment.upvotes}} - by {{comment.author}}
				<span style="font-size:20px; margin-left:10px;">
					{{comment.body}}
				</span>
			</div>
			<form ng-submit="addComment()" style="margin-top:30px;">
				<h3>Add comment</h3>
				<div class="form-group">
					<input type="text" class="form-control" ng-model="body" placeholder="Comment" />
					<button type="submit" class="btn btn-primary">Add comment</button>
				</div>
			</form>
		</script>

	</body>
	</html>